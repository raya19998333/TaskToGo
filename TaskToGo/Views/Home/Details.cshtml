@model TodoTask

<div class="container detail-task-container py-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px; border-radius: 20px; background: linear-gradient(135deg,#ede9fe,#f5f3ff);">
        <h2 class="text-center mb-4" style="color:#7c3aed;">Task Details</h2>

        <form>
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Task Name</label>
                <input disabled asp-for="Name" class="form-control form-control-lg" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                <input disabled asp-for="Description" class="form-control form-control-lg" />
            </div>

            <div class="mb-3">
                <label asp-for="Deadline" class="form-label fw-bold">Deadline</label>
                <input disabled asp-for="Deadline" type="datetime-local" class="form-control form-control-lg" />
            </div>

            <div class="mb-3">
                <label asp-for="TaskCategoryId" class="form-label fw-bold">Category</label>
                <select asp-for="TaskCategoryId" disabled class="form-select form-select-lg">
                    <option value="@Model.taskCategory.Id">@Model.taskCategory.Name</option>
                </select>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-gradient-secondary btn-lg px-5">Back</a>
            </div>
        </form>
    </div>
</div>
