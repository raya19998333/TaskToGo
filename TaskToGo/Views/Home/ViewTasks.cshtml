@model List<TaskToGo.Models.TodoTask>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/style.css" />
<div class="row g-4 justify-content-center">
    @foreach (var task in Model)
    {
        <div class="col-md-4">
            <div class="card task-card position-relative overflow-hidden">
                <div class="card-glow"></div>

                <div class="card-body">
                    <h5 class="card-title">@task.Name</h5>
                    <p class="card-category">
                        <span class="badge bg-gradient-purple">@task.taskCategory?.Name</span>
                    </p>
                    <p class="card-deadline">Deadline: @task.Deadline.ToString("dd/MM/yyyy")</p>

                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-gradient-primary">
                            <i class="bi bi-eye-fill"></i> View
                        </a>
                        <a asp-action="Update" asp-route-id="@task.Id" class="btn btn-gradient-warning">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-gradient-danger">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </form>
                    </div>

                    <div class="particles">
                        <span></span><span></span><span></span><span></span><span></span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
