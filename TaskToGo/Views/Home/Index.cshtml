@{
    ViewData["Title"] = "Home Page";
}
@model List<TodoTask>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Todo Name
                </th>
                <th>
                    Deadline
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Deadline</td>
                    <td><a class="btn btn-primary">ViewDetails</a> </td>
                    <td><a class="btn btn-warning">update</a> </td>
                    <td><a class="btn btn-danager">Delete</a> </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="alert alert-warning">No Tasks Yet</h3>
}