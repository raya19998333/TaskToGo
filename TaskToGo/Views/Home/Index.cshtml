@{
    ViewData["Title"] = "Home Page";
}
@model List<TodoTask>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Todo Name
                </th>
                <th>
                    Deadline
                </th>
                <th>
                    Category Name
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Deadline</td>
                    <td>@item.taskCategory?.Name</td>
                    <td><a class="btn btn-primary" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">ViewDetails</a> </td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">update</a> </td>
                    <td><a class="btn btn-danger" asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Delete</a> </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="alert alert-warning">No Tasks Yet</h3>
}