@model IEnumerable<TaskToGo.Models.TaskCategory>
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<div class="main-content">
    <div class="section-header">
        <h1>Categories</h1>
        <a asp-action="Create" class="btn btn-primary">+ New Category</a>
    </div>

    <div class="tasks-grid">
        @foreach (var cat in Model)
        {
            <div class="task-card fade-in">
                <div class="task-header">
                    <h3 class="task-title">@cat.Name</h3>
                </div>
                <p class="task-description">@cat.Description</p>
                <div class="task-meta">
                    <a asp-action="Update" asp-route-Id="@cat.Id" class="btn btn-secondary">Edit</a>
                    <form asp-action="Delete" asp-route-Id="@cat.Id" method="post" style="display:inline;">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                    <a asp-action="Detail" asp-route-Id="@cat.Id" class="btn btn-success">View</a>
                </div>
            </div>
        }
    </div>
</div>
