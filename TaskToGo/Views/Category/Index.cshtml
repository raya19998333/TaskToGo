@model List<TaskCategory>

<div class="container categories-cards-container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h3 style="color:#7c3aed;">All Categories</h3>
        <a class="btn btn-gradient-primary btn-lg" asp-controller="Category" asp-action="Create">Create Category</a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card category-card shadow-lg p-4">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text"><strong>Number:</strong> @item.Id</p>
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-controller="Category" asp-action="Detail" asp-route-Id="@item.Id" class="btn btn-sm btn-gradient-primary">View</a>
                                <a asp-controller="Category" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-sm btn-gradient-warning">Update</a>
                                <button type="button" class="btn btn-sm btn-gradient-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">Delete</button>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal-@item.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel-@item.Id">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete the category <strong>@item.Name</strong>?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <a class="btn btn-gradient-danger" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id">Yes, Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h4 class="text-center text-muted">No categories found.</h4>
    }
</div>
