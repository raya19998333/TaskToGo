@model TaskCategory
<link rel="stylesheet" href="~/css/style.css" />
<div class="container update-category-container py-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 500px; border-radius: 20px; background: linear-gradient(135deg,#ede9fe,#f5f3ff);">
        <h2 class="text-center mb-4" style="color:#7c3aed;">Update Category</h2>

        <form method="post" asp-controller="Category" asp-action="Update">
            <div class="mb-3">
                <label class="form-label fw-bold" asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Update Category" class="btn btn-gradient-warning btn-lg px-5" />
            </div>
        </form>
    </div>
</div>
