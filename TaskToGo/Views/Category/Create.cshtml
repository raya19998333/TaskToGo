@model TaskCategory

<div class="container create-category-container py-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 500px; border-radius: 20px;">
        <h2 class="text-center mb-4" style="color:#7c3aed;">Create New Category</h2>

        <form method="post" asp-controller="Category" asp-action="Create">
            <div class="mb-3">
                <label class="form-label fw-bold" asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Create Category" class="btn btn-gradient-primary btn-lg px-5" />
            </div>
        </form>
    </div>
</div>
